[run]
source = .
omit =
    tests/*
    .venv/*
    vosk-models/*
    sounds/*
    __pycache__/*
    *.pyc
    main.py
    daemon.py
    updater.py
    config_watcher.py
    voice_recorder.py
    transcription.py

[report]
fail_under = 70
exclude_lines =
    pragma: no cover
    def __repr__
    if __name__ == .__main__.:
    raise AssertionError
    raise NotImplementedError
    if 0:
    if False:

[html]
directory = htmlcov
